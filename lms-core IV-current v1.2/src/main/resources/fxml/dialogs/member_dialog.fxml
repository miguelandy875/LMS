<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.lms.controller.dialogs.MemberDialogController"
      spacing="20.0" styleClass="dialog-container" stylesheets="@../../styles/dialogs.css">
   
   <children>
      
      <!-- Header -->
      <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="dialog-header">
         <children>
            <Label text="ðŸ‘¤" styleClass="dialog-icon" />
            <Label text="Member Information" styleClass="dialog-title" />
         </children>
      </HBox>
      
      <!-- Form Content -->
      <GridPane hgap="15.0" vgap="15.0" styleClass="form-grid">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="120.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            
            <!-- First Name -->
            <Label text="First Name *" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="firstNameField" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            
            <!-- Last Name -->
            <Label text="Last Name *" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="lastNameField" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            
            <!-- Email -->
            <Label text="Email *" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="emailField" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            
            <!-- Phone -->
            <Label text="Phone *" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="phoneField" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            
            <!-- Gender -->
            <Label text="Gender" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <ComboBox fx:id="genderCombo" styleClass="form-combo" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            
            <!-- Role -->
            <Label text="Role" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <ComboBox fx:id="roleCombo" styleClass="form-combo" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            
            <!-- Status -->
            <Label text="Status" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="6" />
            <ComboBox fx:id="statusCombo" styleClass="form-combo" GridPane.columnIndex="1" GridPane.rowIndex="6" />
            
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </GridPane>
      
      <!-- Password Section (for new members) -->
      <VBox spacing="15.0" styleClass="password-section">
         <children>
            <Separator styleClass="form-separator" />
            
            <GridPane hgap="15.0" vgap="15.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="120.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints vgrow="SOMETIMES" />
                  <RowConstraints vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  
                  <Label fx:id="passwordLabel" text="Password *" styleClass="form-label" 
                         GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <PasswordField fx:id="passwordField" styleClass="form-field" 
                               GridPane.columnIndex="1" GridPane.rowIndex="0" />
                  
                  <Label fx:id="confirmPasswordLabel" text="Confirm Password *" styleClass="form-label" 
                         GridPane.columnIndex="0" GridPane.rowIndex="1" />
                  <PasswordField fx:id="confirmPasswordField" styleClass="form-field" 
                               GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  
               </children>
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding>
            </GridPane>
         </children>
      </VBox>
      
      <!-- Required Fields Note -->
      <Label text="* Required fields" styleClass="required-note">
         <VBox.margin>
            <Insets left="20.0" />
         </VBox.margin>
      </Label>
      
      <!-- Action Buttons -->
      <HBox alignment="CENTER_RIGHT" spacing="15.0" styleClass="dialog-buttons">
         <children>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" 
                    styleClass="btn-secondary" text="Cancel" />
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSave" 
                    styleClass="btn-primary" text="Save Member" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </HBox>
      
   </children>
</VBox>
