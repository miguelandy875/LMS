<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>

<?import javafx.scene.control.*?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
fx:controller="com.lms.controller.DashboardController"
styleClass="dashboard-container" stylesheets="@../styles/dashboard.css">

   <top>
      <!-- Top Navigation Bar - Dark Theme to Blend -->
      <HBox alignment="CENTER_LEFT" prefHeight="70.0" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #2d3748 0%, #1a202c 100%); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 8, 0.4, 0, 3);">
         <children>
            <!-- Logo/Title Section -->
            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                  <Label style="-fx-font-family: 'Font Awesome 5 Free'; -fx-font-size: 36px; -fx-text-fill: #32CD32; -fx-font-weight: 900;" text="ðŸ“š" />
                  <VBox>
                     <children>
                        <Label style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-weight: bold;" text="Library Management System" />
                        <Label style="-fx-font-size: 12px; -fx-text-fill: rgba(255, 255, 255, 0.7);" text="Dashboard" />
                     </children>
                  </VBox>
               </children>
            </HBox>

        <Region HBox.hgrow="ALWAYS" />
        
        <!-- Center - Date/Time Display -->
        <HBox alignment="CENTER" spacing="10.0">
           <children>
              <Label text="ðŸ“…" style="-fx-font-size: 16px; -fx-text-fill: #ffffff" />
              <Label fx:id="currentTimeLabel" text="Jan 01, 2024 - 12:00:00" style="-fx-font-size: 12px; -fx-text-fill: rgba(255, 255, 255, 0.8); -fx-font-weight: 500;" />
           </children>
        </HBox>
        
        <Region HBox.hgrow="ALWAYS" />
        
        <!-- User Info and Logout Section -->
        <HBox alignment="CENTER_RIGHT" spacing="20.0">
           <children>
              <!-- Welcome Message -->
              <VBox alignment="CENTER_RIGHT">
                 <children>
                    <Label text="Welcome back!" style="-fx-font-size: 14px; -fx-text-fill: white; -fx-font-weight: 500;" />
                    <Label fx:id="userNameLabel" text="John Doe" style="-fx-font-size: 12px; -fx-text-fill: rgba(255, 255, 255, 0.7);" />
                    <Label fx:id="userRoleLabel" text="LIBRARIAN" style="-fx-font-size: 10px; -fx-text-fill: rgba(50, 205, 50, 0.8); -fx-font-weight: bold;" />
                 </children>
              </VBox>
              
              <!-- Logout Button with Enhanced Styling -->
              <Button mnemonicParsing="false" onAction="#handleLogout" style="-fx-background-color: rgba(50, 205, 50, 0.2); -fx-text-fill: white; -fx-padding: 8px 16px; -fx-cursor: hand; -fx-font-weight: bold; -fx-border-color: rgba(50, 205, 50, 0.3); -fx-border-width: 1px; " text="Logout">
                 <font>
                    <Font size="12.0" />
                 </font>
              </Button>
           </children>
        </HBox>
     </children>
     <padding>
        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
     </padding>
  </HBox>


   </top>

   <!-- Left Sidebar Navigation -->

   <left>
      <fx:include source="Sidebar_v1.fxml" fx:id="sidebar" />
   </left>

   <!-- Center Content Area -->

   <center>
      <StackPane fx:id="contentArea" style="-fx-background-color: #b6b6b6ff;">
      <!-- #1a202c; -->
         <!-- Content will be loaded dynamically -->
      </StackPane>
   </center>

</BorderPane>