<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.lms.controller.modules.BookController"
      styleClass="module-container" stylesheets="@../../styles/modules.css">
   
   <children>
      
      <!-- Header Section -->
      <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="module-header">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="ðŸ“š Book Management" 
                  styleClass="module-title" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#handleRefresh" 
                    text="ðŸ”„ Refresh" styleClass="action-button" />
         </children>
      </HBox>
      
      <!-- Statistics Cards -->
      <GridPane hgap="15.0" vgap="15.0" styleClass="stats-container">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            
            <!-- Total Books Card -->
            <VBox alignment="CENTER" styleClass="stat-card, stat-card-primary" GridPane.columnIndex="0">
               <children>
                  <Label fx:id="totalBooksLabel" text="0" styleClass="stat-number" />
                  <Label text="Total Books" styleClass="stat-label" />
               </children>
            </VBox>
            
            <!-- Available Books Card -->
            <VBox alignment="CENTER" styleClass="stat-card, stat-card-success" GridPane.columnIndex="1">
               <children>
                  <Label fx:id="availableBooksLabel" text="0" styleClass="stat-number" />
                  <Label text="Available" styleClass="stat-label" />
               </children>
            </VBox>
            
            <!-- Issued Books Card -->
            <VBox alignment="CENTER" styleClass="stat-card, stat-card-danger" GridPane.columnIndex="2">
               <children>
                  <Label fx:id="issuedBooksLabel" text="0" styleClass="stat-number" />
                  <Label text="Issued" styleClass="stat-label" />
               </children>
            </VBox>
            
            <!-- Reserved Books Card -->
            <VBox alignment="CENTER" styleClass="stat-card, stat-card-warning" GridPane.columnIndex="3">
               <children>
                  <Label fx:id="reservedBooksLabel" text="0" styleClass="stat-number" />
                  <Label text="Reserved" styleClass="stat-label" />
               </children>
            </VBox>
            
            <!-- Total Authors Card -->
            <VBox alignment="CENTER" styleClass="stat-card, stat-card-info" GridPane.columnIndex="4">
               <children>
                  <Label fx:id="totalAuthorsLabel" text="0" styleClass="stat-number" />
                  <Label text="Authors" styleClass="stat-label" />
               </children>
            </VBox>
            
            <!-- Total Categories Card -->
            <VBox alignment="CENTER" styleClass="stat-card, stat-card-secondary" GridPane.columnIndex="5">
               <children>
                  <Label fx:id="totalCategoriesLabel" text="0" styleClass="stat-number" />
                  <Label text="Categories" styleClass="stat-label" />
               </children>
            </VBox>
            
         </children>
      </GridPane>
      
      <!-- Search and Filter Section -->
      <VBox spacing="15.0" styleClass="filter-section">
         <children>
            
            <!-- Search Bar -->
            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                  <Label text="ðŸ” Search:" styleClass="filter-label" />
                  <TextField fx:id="searchField" prefWidth="300.0" styleClass="search-field" />
                  
                  <Label text="Status:" styleClass="filter-label" />
                  <ComboBox fx:id="statusFilter" prefWidth="130.0" styleClass="filter-combo" />
                  
                  <Label text="Category:" styleClass="filter-label" />
                  <ComboBox fx:id="categoryFilter" prefWidth="150.0" styleClass="filter-combo" />
                  
                  <Button fx:id="clearFiltersButton" mnemonicParsing="false" onAction="#handleClearFilters" 
                          text="Clear Filters" styleClass="secondary-button" />
                  
                  <Region HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            
            <!-- Action Buttons -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Button fx:id="addBookButton" mnemonicParsing="false" onAction="#handleAddBook" 
                          text="âž• Add Book" styleClass="primary-button" />
                  <Button fx:id="editBookButton" disable="true" mnemonicParsing="false" onAction="#handleEditBook" 
                          text="âœï¸ Edit" styleClass="secondary-button" />
                  <Button fx:id="deleteBookButton" disable="true" mnemonicParsing="false" onAction="#handleDeleteBook" 
                          text="ðŸ—‘ï¸ Delete" styleClass="danger-button" />
                  <Button fx:id="viewBookButton" disable="true" mnemonicParsing="false" onAction="#handleViewBook" 
                          text="ðŸ‘ï¸ View Details" styleClass="info-button" />
               </children>
            </HBox>
            
         </children>
      </VBox>
      
      <!-- Books Table -->
      <TableView fx:id="booksTable" styleClass="data-table" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="idColumn" prefWidth="60.0" text="ID" />
            <TableColumn fx:id="titleColumn" prefWidth="200.0" text="Title" />
            <TableColumn fx:id="authorsColumn" prefWidth="150.0" text="Author(s)" />
            <TableColumn fx:id="categoryColumn" prefWidth="120.0" text="Category" />
            <TableColumn fx:id="pagesColumn" prefWidth="80.0" text="Pages" />
            <TableColumn fx:id="yearColumn" prefWidth="80.0" text="Year" />
            <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      
   </children>
   
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   
</VBox>