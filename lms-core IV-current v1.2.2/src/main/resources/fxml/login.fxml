<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.lms.controller.LoginController" 
            styleClass="login-container" stylesheets="@../styles/login.css">
   
   <children>
      <!-- Background Panel -->
      <VBox alignment="CENTER" layoutX="0.0" layoutY="0.0" prefHeight="600.0" prefWidth="900.0" 
            styleClass="background-panel">
         
         <!-- Left Side - Branding -->
         <HBox alignment="CENTER" prefHeight="600.0" prefWidth="900.0">
            
            <!-- Left Panel -->
            <VBox alignment="CENTER" prefHeight="600.0" prefWidth="450.0" styleClass="left-panel">
               <children>
                  <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/library-icon.png" />
                     </image>
                  </ImageView>
                  
                  <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" 
                        text="Library Management System" styleClass="app-title">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Text>
                  
                  <Text fill="#E0E0E0" strokeType="OUTSIDE" strokeWidth="0.0" 
                        text="Manage your library efficiently and effectively" styleClass="app-subtitle">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Text>
                  
                  <VBox alignment="CENTER_LEFT" spacing="15.0" styleClass="features-list">
                     <VBox.margin>
                        <Insets top="40.0" />
                     </VBox.margin>
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="✓" styleClass="feature-check" />
                              <Label text="Book Management" styleClass="feature-text" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="✓" styleClass="feature-check" />
                              <Label text="Member Management" styleClass="feature-text" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="✓" styleClass="feature-check" />
                              <Label text="Loan Tracking" styleClass="feature-text" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="✓" styleClass="feature-check" />
                              <Label text="Seat Reservations" styleClass="feature-text" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
               </padding>
            </VBox>
            
            <!-- Right Panel - Login Form -->
            <VBox alignment="CENTER" prefHeight="600.0" prefWidth="450.0" styleClass="right-panel">
               <children>
                  
                  <!-- Login Form Card -->
                  <VBox alignment="CENTER" spacing="25.0" styleClass="login-card">
                     <children>
                        
                        <!-- Header -->
                        <VBox alignment="CENTER" spacing="5.0">
                           <children>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome Back" 
                                    styleClass="login-title" />
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" 
                                    text="Sign in to your account" styleClass="login-subtitle" />
                           </children>
                        </VBox>
                        
                        <!-- Form Fields -->
                        <VBox spacing="20.0" styleClass="form-fields">
                           <children>
                              
                              <!-- Email Field -->
                              <VBox spacing="8.0">
                                 <children>
                                    <Label text="Email Address" styleClass="field-label" />
                                    <TextField fx:id="emailField" promptText="Enter your email address" 
                                             styleClass="form-field" />
                                 </children>
                              </VBox>
                              
                              <!-- Password Field -->
                              <VBox spacing="8.0">
                                 <children>
                                    <Label text="Password" styleClass="field-label" />
                                    <PasswordField fx:id="passwordField" promptText="Enter your password" 
                                                 styleClass="form-field" />
                                 </children>
                              </VBox>
                              
                           </children>
                        </VBox>
                        
                        <!-- Status Label -->
                        <Label fx:id="statusLabel" styleClass="status-label" />
                        
                        <!-- Loading Indicator -->
                        <ProgressIndicator fx:id="loadingIndicator" maxHeight="30.0" maxWidth="30.0" />
                        
                        <!-- Buttons -->
                        <VBox spacing="15.0" styleClass="button-container">
                           <children>
                              <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLogin" 
                                    prefHeight="45.0" prefWidth="300.0" text="Sign In" styleClass="login-button" />
                              
                              <Button fx:id="exitButton" mnemonicParsing="false" onAction="#handleExit" 
                                    prefHeight="35.0" prefWidth="300.0" text="Exit Application" styleClass="exit-button" />
                           </children>
                        </VBox>
                        
                     </children>
                     <padding>
                        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                     </padding>
                  </VBox>
                  
               </children>
               <padding>
                  <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
               </padding>
            </VBox>
            
         </HBox>
      </VBox>
   </children>
</AnchorPane>
