<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="module-outer-margin" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
 fx:controller="com.lms.controller.modules.MemberController">

   <children>

      <VBox spacing="20.0" styleClass="module-container" stylesheets="@../../styles/modules.css">
   
         <children>
      
         <!-- Header Section -->
         <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="module-header">
         <children>
            <Label style="-fx-text-fill: #32CD32;" styleClass="module-icon" text="👥" />
            <VBox>
               <children>
                  <Label styleClass="module-title" text="Member Management" />
                  <Label styleClass="module-subtitle" text="Manage library members and their accounts" />
               </children>
            </VBox>
            
            <Region HBox.hgrow="ALWAYS" />
            
            <!-- Statistics Cards -->
            <HBox spacing="15.0" styleClass="stats-container">
               <children>
                  <VBox alignment="CENTER" styleClass="stat-card-mini stat-card-blue">
                     <children>
                        <Label fx:id="totalMembersLabel" styleClass="stat-number-mini" text="0" />
                        <Label styleClass="stat-label-mini" text="Total" />
                     </children>
                  </VBox>
                  
                  <VBox alignment="CENTER" styleClass="stat-card-mini stat-card-green">
                     <children>
                        <Label fx:id="activeMembersLabel" styleClass="stat-number-mini" text="0" />
                        <Label styleClass="stat-label-mini" text="Active" />
                     </children>
                  </VBox>
                  
                  <VBox alignment="CENTER" styleClass="stat-card-mini stat-card-red">
                     <children>
                        <Label fx:id="inactiveMembersLabel" styleClass="stat-number-mini" text="0" />
                        <Label styleClass="stat-label-mini" text="Inactive" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </padding>
         </HBox>
      
         <!-- Search and Filter Section -->
         <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="filter-section">
         <children>
            <!-- Search Field -->
            <VBox spacing="5.0">
               <children>
                  <Label styleClass="filter-label" text="Search Members" />
                  <TextField fx:id="searchField" prefWidth="300.0" promptText="Search by name, email, or phone..." styleClass="search-field" />
               </children>
            </VBox>
            
            <!-- Role Filter -->
            <VBox spacing="5.0">
               <children>
                  <Label styleClass="filter-label" text="Filter by Role" />
                  <ComboBox fx:id="filterRole" prefWidth="150.0" styleClass="filter-combo" />
               </children>
            </VBox>
            
            <!-- Status Filter -->
            <VBox spacing="5.0">
               <children>
                  <Label styleClass="filter-label" text="Filter by Status" />
                  <ComboBox fx:id="filterStatus" prefWidth="150.0" styleClass="filter-combo" />
               </children>
            </VBox>
            
            <Region HBox.hgrow="ALWAYS" />
            
            <!-- Page Size Selection -->
            <VBox spacing="5.0">
               <children>
                  <Label styleClass="filter-label" text="Page Size" />
                  <ComboBox fx:id="pageSizeCombo" prefWidth="80.0" styleClass="filter-combo" />
               </children>
            </VBox>
            
            <!-- Action Buttons -->
            <HBox spacing="10.0" styleClass="action-buttons">
               <children>
                  <Button fx:id="addMemberBtn" mnemonicParsing="false" onAction="#handleAddMember" styleClass="btn-primary" text="➕ Add Member" />
                  <Button fx:id="refreshBtn" mnemonicParsing="false" onAction="#handleRefresh" styleClass="btn-secondary" text="🔄 Refresh" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
         </padding>
         </HBox>
      
         <!-- Members Table Section -->
         <VBox spacing="10.0" styleClass="table-section" VBox.vgrow="ALWAYS">
         <children>
            
            <!-- Table Actions -->
            <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="table-actions">
               <children>
                  <Label styleClass="table-info" text="Select a member to perform actions:" />
                  
                  <Region HBox.hgrow="ALWAYS" />
                  
                  <Button fx:id="viewMemberBtn" mnemonicParsing="false" onAction="#handleViewMember" styleClass="btn-primary-2" text="👁" />
                  <Button fx:id="editMemberBtn" mnemonicParsing="false" onAction="#handleEditMember"  styleClass="btn-primary-2" text="🖊" />
                  <Button fx:id="deleteMemberBtn" mnemonicParsing="false" onAction="#handleDeleteMember" styleClass="btn-primary-2" text="🗑" />
               </children>
            </HBox>
            
            <!-- Members Table -->
            <TableView fx:id="membersTable" styleClass="data-table" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="idColumn" prefWidth="60.0" text="ID" />
                  <TableColumn fx:id="nameColumn" prefWidth="200.0" text="Full Name" />
                  <TableColumn fx:id="emailColumn" prefWidth="250.0" text="Email" />
                  <TableColumn fx:id="phoneColumn" prefWidth="150.0" text="Phone" />
                  <TableColumn fx:id="roleColumn" prefWidth="100.0" text="Role" />
                  <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
                  <TableColumn fx:id="createdColumn" prefWidth="130.0" text="Created" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            
            <!-- NEW: Pagination Controls -->
            <HBox alignment="CENTER" spacing="15.0" styleClass="pagination-section">
               <children>
                  <!-- Navigation Buttons -->
                  <HBox spacing="5.0" styleClass="pagination-nav">
                     <children>
                        <Button fx:id="firstPageBtn" styleClass="pagination-btn" text="⏮" />
                        <Button fx:id="previousPageBtn" styleClass="pagination-btn" text="◀" />
                        <Button fx:id="nextPageBtn" styleClass="pagination-btn" text="▶" />
                        <Button fx:id="lastPageBtn" styleClass="pagination-btn" text="⏭" />
                     </children>
                  </HBox>
                  
                  <!-- Page Information -->
                  <Label fx:id="pageInfoLabel" styleClass="page-info" text="Page 1 of 1 (1-25 of 25 records)" />
                  
                  <Region HBox.hgrow="ALWAYS" />
                  
                  <!-- Go to Page -->
                  <HBox spacing="5.0" alignment="CENTER_RIGHT" styleClass="goto-page">
                     <children>
                        <Label styleClass="pagination-label" text="Go to page:" />
                        <TextField fx:id="goToPageField" prefWidth="60.0" styleClass="goto-page-field" promptText="1" />
                        <Button fx:id="goToPageBtn" styleClass="pagination-btn" text="Go" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </padding>
            </HBox>
            
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         </VBox>

         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <VBox.margin>
            <Insets />
         </VBox.margin>

      </VBox>

   </children>

</VBox>