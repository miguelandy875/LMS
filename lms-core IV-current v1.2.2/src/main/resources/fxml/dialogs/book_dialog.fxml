<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.lms.controller.dialogs.BookDialogController"
      styleClass="dialog-container" stylesheets="@../../styles/dialogs.css">
   
   <children>
      
      <!-- Header -->
      <HBox alignment="CENTER_LEFT" styleClass="dialog-header">
         <children>
            <Label fx:id="dialogTitle" text="Book Details" styleClass="dialog-title" />
         </children>
      </HBox>
      
      <!-- Form Content -->
      <ScrollPane fitToWidth="true" styleClass="form-scroll">
         <content>
            <VBox spacing="20.0" styleClass="form-container">
               <children>
                  
                  <!-- Basic Information Section -->
                  <VBox spacing="15.0" styleClass="form-section">
                     <children>
                        <Label text="📖 Basic Information" styleClass="section-title" />
                        
                        <!-- Title Field -->
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Title *" styleClass="field-label" />
                              <TextField fx:id="titleField" styleClass="form-field" />
                           </children>
                        </VBox>
                        
                        <!-- Authors Field -->
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Author(s) *" styleClass="field-label" />
                              <TextArea fx:id="authorsField" prefRowCount="3" styleClass="form-field" />
                              <Label text="Tip: Separate multiple authors with commas" styleClass="field-hint" />
                           </children>
                        </VBox>
                        
                     </children>
                  </VBox>
                  
                  <!-- Category Section -->
                  <VBox spacing="15.0" styleClass="form-section">
                     <children>
                        <Label text="📂 Category" styleClass="section-title" />
                        
                        <!-- Category Selection -->
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Category *" styleClass="field-label" />
                              <ComboBox fx:id="categoryComboBox" maxWidth="1.7976931348623157E308" styleClass="form-field" />
                           </children>
                        </VBox>
                        
                        <!-- Add New Category -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <TextField fx:id="newCategoryField" prefWidth="200.0" styleClass="form-field" />
                              <Button fx:id="addCategoryButton" mnemonicParsing="false" onAction="#handleAddCategory" 
                                      text="Add Category" styleClass="secondary-button" />
                           </children>
                        </HBox>
                        
                     </children>
                  </VBox>
                  
                  <!-- Publication Details Section -->
                  <VBox spacing="15.0" styleClass="form-section">
                     <children>
                        <Label text="📅 Publication Details" styleClass="section-title" />
                        
                        <HBox spacing="15.0">
                           <children>
                              
                              <!-- Pages Field -->
                              <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label text="Pages *" styleClass="field-label" />
                                    <TextField fx:id="pagesField" styleClass="form-field" />
                                 </children>
                              </VBox>
                              
                              <!-- Year Field -->
                              <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label text="Publication Year *" styleClass="field-label" />
                                    <TextField fx:id="yearField" styleClass="form-field" />
                                 </children>
                              </VBox>
                              
                              <!-- Status Field -->
                              <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label text="Status" styleClass="field-label" />
                                    <ComboBox fx:id="statusComboBox" maxWidth="1.7976931348623157E308" styleClass="form-field" />
                                 </children>
                              </VBox>
                              
                           </children>
                        </HBox>
                        
                     </children>
                  </VBox>
                  
                  <!-- Additional Notes Section -->
                  <VBox spacing="15.0" styleClass="form-section">
                     <children>
                        <Label text="📝 Additional Information" styleClass="section-title" />
                        
                        <!-- Notes Field -->
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Notes (Optional)" styleClass="field-label" />
                              <TextArea fx:id="notesArea" prefRowCount="4" styleClass="form-field" />
                           </children>
                        </VBox>
                        
                     </children>
                  </VBox>
                  
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
      
      <!-- Button Bar -->
      <HBox alignment="CENTER_RIGHT" spacing="10.0" styleClass="dialog-buttons">
         <children>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" 
                    text="Cancel" styleClass="secondary-button" />
            <Button fx:id="saveButton" disable="true" mnemonicParsing="false" onAction="#handleSave" 
                    text="Save Book" styleClass="primary-button" />
         </children>
      </HBox>
      
   </children>
   
</VBox>