<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane styleClass="dialog-container" stylesheets="@../../styles/dialogs.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lms.controller.dialogs.BookDialogController">

   <!-- Header -->
   <top>
      <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="60.0" prefHeight="40.0" prefWidth="800.0" styleClass="dialog-header">
         <children>
            <Label styleClass="dialog-icon" text="ðŸ“š " />
            <Label fx:id="dialogTitle" styleClass="dialog-title" text="Book Details" />
         </children>
      </HBox>
   </top>

   <!-- Body Content -->
   <center>
      <HBox alignment="TOP_CENTER" spacing="30.0">
         <children>
            <!-- Left Column -->
            <VBox prefHeight="302.0" prefWidth="352.0" spacing="20.0" styleClass="form-section">
               <children>
                  <!-- Basic Info -->
                  <VBox spacing="10.0">
                     <children>

                        <Label styleClass="form-label" text="Title *" />
                        <TextField fx:id="titleField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="389.0" styleClass="form-field" />

                        <Label styleClass="form-label" text="Author(s) *" />
                        <TextArea fx:id="authorsField" blendMode="OVERLAY" maxHeight="-Infinity" maxWidth="-Infinity" prefRowCount="3" promptText="Enter author names separated by commas\ne.g., Nice Stella, Andy Miguel&quot;" styleClass="form-field" />
                        <Label styleClass="required-note" text="Tip: Separate multiple authors with commas">
                           <font>
                              <Font size="14.0" />
                           </font></Label>
                     </children>
                  </VBox>

                  <!-- Notes -->
                  <VBox spacing="10.0">
                     <children>
                        <Label styleClass="form-label" text="Notes (Optional)" />
                        <TextArea fx:id="notesArea" blendMode="OVERLAY" prefRowCount="4" styleClass="form-field" />
                     </children>
                  </VBox>
               </children>
            </VBox>

            <!-- Right Column -->
            <VBox prefHeight="302.0" prefWidth="551.0" spacing="20.0" styleClass="form-section">
               <children>
                  <!-- Category -->
                  <VBox spacing="10.0">
                     <children>
                        <Label styleClass="form-label" text="Category *" />
                        <ComboBox fx:id="categoryComboBox" maxWidth="Infinity" styleClass="filter-combo">
                           <VBox.margin>
                              <Insets bottom="8.0" />
                           </VBox.margin></ComboBox>

                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <TextField fx:id="newCategoryField" maxHeight="-Infinity" maxWidth="-Infinity" prefWidth="223.0" styleClass="form-field" />
                              <Button fx:id="addCategoryButton" mnemonicParsing="false" onAction="#handleAddCategory" prefHeight="36.0" prefWidth="132.0" styleClass="secondary-button" text="Add Category" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- Publication Info -->
                  <VBox spacing="10.0">
                     <children>
                        <Label styleClass="section-title" text="Publication Details" />

                        <HBox spacing="15.0">
                           <children>
                              <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label styleClass="form-label" text="Pages *" />
                                    <TextField fx:id="pagesField" promptText="page No" styleClass="form-field" />
                                 </children>
                              </VBox>

                              <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label styleClass="form-label" text="Pub Year *" />
                                    <TextField fx:id="yearField" styleClass="form-field" />
                                 </children>
                              </VBox>

                              <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label styleClass="form-label" text="Status" />
                                    <ComboBox fx:id="statusComboBox" maxWidth="Infinity" prefWidth="276.0" styleClass="filter-combo" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
         <BorderPane.margin>
            <Insets top="20.0" />
         </BorderPane.margin>
      </HBox>
   </center>
   <bottom>
       <VBox spacing="5.0">
         <children>
            <Label styleClass="required-note" text="* Required fields">
               <VBox.margin>
                  <Insets left="40.0" />
               </VBox.margin>
            </Label>
            <Separator prefWidth="200.0" />
            <HBox alignment="CENTER_RIGHT" spacing="15.0" styleClass="dialog-buttons">
               <children>
                  <Button fx:id="saveButton" minHeight="-Infinity" mnemonicParsing="false" onAction="#handleSave" prefHeight="36.0" styleClass="btn-primary" text="Save" />
                  <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" styleClass="btn-secondary" text="Cancel" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </bottom>
</BorderPane>












