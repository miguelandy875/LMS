<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.lms.controller.DashboardController"
            styleClass="dashboard-container" stylesheets="@../styles/dashboard.css">
   
   <!-- Top Header Bar -->
   <top>
      <VBox styleClass="header-container">
         
         <!-- Menu Bar -->
         <MenuBar styleClass="menu-bar">
           <menus>
             <Menu mnemonicParsing="false" text="File">
               <items>
                 <MenuItem mnemonicParsing="false" text="Logout" onAction="#handleLogout" />
                 <SeparatorMenuItem />
                 <MenuItem mnemonicParsing="false" text="Exit" onAction="#handleExit" />
               </items>
             </Menu>
             <Menu mnemonicParsing="false" text="Account">
               <items>
                 <MenuItem mnemonicParsing="false" text="Change Password" onAction="#handleChangePassword" />
                 <MenuItem mnemonicParsing="false" text="Profile" onAction="#handleProfile" />
                 <SeparatorMenuItem />
                 <MenuItem mnemonicParsing="false" text="Settings" onAction="#handleSettings" />
               </items>
             </Menu>
             <Menu mnemonicParsing="false" text="Help">
               <items>
                 <MenuItem mnemonicParsing="false" text="About" onAction="#handleAbout" />
               </items>
             </Menu>
           </menus>
         </MenuBar>
         
         <!-- Header Info Bar -->
         <HBox alignment="CENTER_LEFT" styleClass="header-info-bar" spacing="20.0">
            <children>
               
               <!-- Left Side - User Info -->
               <HBox alignment="CENTER_LEFT" spacing="15.0">
                  <children>
                     <VBox alignment="CENTER_LEFT" spacing="2.0">
                        <children>
                           <Label fx:id="userNameLabel" text="John Doe" styleClass="user-name" />
                           <Label fx:id="userRoleLabel" text="LIBRARIAN" styleClass="user-role" />
                        </children>
                     </VBox>
                  </children>
               </HBox>
               
               <!-- Spacer -->
               <Region HBox.hgrow="ALWAYS" />
               
               <!-- Right Side - Current Time -->
               <HBox alignment="CENTER_RIGHT" spacing="10.0">
                  <children>
                     <Label text="ðŸ“…" styleClass="time-icon" />
                     <Label fx:id="currentTimeLabel" text="Jan 01, 2024 - 12:00:00" styleClass="current-time" />
                  </children>
               </HBox>
               
            </children>
            <padding>
               <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
         </HBox>
      </VBox>
   </top>
   
   <!-- Left Sidebar Navigation -->
   <left>
      <fx:include source="sidebar.fxml" fx:id="sidebar" />
   </left>
   
   <!-- Center Content Area -->
   <center>
      <StackPane fx:id="contentArea" styleClass="content-area">
         <!-- Content will be loaded dynamically -->
      </StackPane>
   </center>
   
</BorderPane>
