<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<ScrollPane styleClass="home-container"
stylesheets="@../../styles/modules.css"
 xmlns="http://javafx.com/javafx/21.0.7"
  xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="com.lms.controller.modules.BookController"> 
     
  <VBox minHeight="-Infinity" minWidth="-Infinity" spacing="30.0" 
      styleClass="module-container">
   
         <children>
      
      
            <!-- Header Section -->
            <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="module-header">
               <children>
                  <Label style="-fx-text-fill: #32CD32;" styleClass="module-icon" text="📚" />
                  <VBox>
                     <children>
                        <Label styleClass="module-title" text="Book Management" />
                        <Label styleClass="module-subtitle" text="Manage library books" />
                     </children>
                  </VBox>
                  <Region minWidth="-Infinity" HBox.hgrow="ALWAYS" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
               </padding>
            </HBox>
      
            <!-- Statistics Cards -->
            <GridPane hgap="15.0" styleClass="stats-container" vgap="15.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  
                  <!-- Total Books Card -->
                  <VBox alignment="CENTER" styleClass="stat-card, stat-card-primary" GridPane.columnIndex="0">
                     <children>
                        <Label fx:id="totalBooksLabel" styleClass="stat-number" text="0" />
                        <Label styleClass="stat-label" text="Total Books" />
                     </children>
                  </VBox>
                  
                  <!-- Available Books Card -->
                  <VBox alignment="CENTER" styleClass="stat-card, stat-card-success" GridPane.columnIndex="1">
                     <children>
                        <Label fx:id="availableBooksLabel" styleClass="stat-number" text="0" />
                        <Label styleClass="stat-label" text="Available" />
                     </children>
                  </VBox>
                  
                  <!-- Issued Books Card -->
                  <VBox alignment="CENTER" styleClass="stat-card, stat-card-danger" GridPane.columnIndex="2">
                     <children>
                        <Label fx:id="issuedBooksLabel" styleClass="stat-number" text="0" />
                        <Label styleClass="stat-label" text="Issued" />
                     </children>
                  </VBox>
                  
                  <!-- Reserved Books Card -->
                  <VBox alignment="CENTER" styleClass="stat-card, stat-card-warning" GridPane.columnIndex="3">
                     <children>
                        <Label fx:id="reservedBooksLabel" styleClass="stat-number" text="0" />
                        <Label styleClass="stat-label" text="Reserved" />
                     </children>
                  </VBox>
                  
                  <!-- Total Authors Card -->
                  <VBox alignment="CENTER" styleClass="stat-card, stat-card-info" GridPane.columnIndex="4">
                     <children>
                        <Label fx:id="totalAuthorsLabel" styleClass="stat-number" text="0" />
                        <Label styleClass="stat-label" text="Authors" />
                     </children>
                  </VBox>
                  
                  <!-- Total Categories Card -->
                  <VBox alignment="CENTER" styleClass="stat-card, stat-card-secondary" GridPane.columnIndex="5">
                     <children>
                        <Label fx:id="totalCategoriesLabel" styleClass="stat-number" text="0" />
                        <Label styleClass="stat-label" text="Categories" />
                     </children>
                  </VBox>
                  
               </children>
            </GridPane>
      
            <!-- Search and Filter Section -->
            <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="filter-section">
               <children>
                  <!-- Search Field -->
                  <VBox spacing="5.0">
                     <children>
                        <Label styleClass="filter-label" text="Search books" />
                        <TextField fx:id="searchField" prefWidth="300.0" styleClass="search-field" />
                     </children>
                  </VBox>
                  
                  <!-- status Filter -->
                  <VBox spacing="5.0">
                     <children>
                        <Label styleClass="filter-label" text="Filter Status" />
                        <ComboBox fx:id="statusFilter" prefWidth="150.0" styleClass="filter-combo" />
                     </children>
                  </VBox>
                  
                  <!-- Category Filter -->
                  <VBox spacing="5.0">
                     <children>
                        <Label styleClass="filter-label" text="Filter by Category" />
                        <ComboBox fx:id="categoryFilter" prefWidth="150.0" styleClass="filter-combo" />
                     </children>
                  </VBox>
                  
                  <Region HBox.hgrow="ALWAYS" />
                  
                  <!-- Page Size Selection -->
                  <VBox spacing="5.0">
                     <children>
                        <Label styleClass="filter-label" text="Page Size" />
                        <ComboBox fx:id="pageSizeCombo" prefWidth="80.0" styleClass="filter-combo" />
                     </children>
                  </VBox>
                  
                  <!-- Action Buttons -->
                  <HBox spacing="10.0" styleClass="action-buttons">
                     <children>
                        <Button fx:id="clearFiltersButton" mnemonicParsing="false" onAction="#handleClearFilters" prefHeight="35.0" styleClass="secondary-button" text="Clear Filters">
                           <HBox.margin>
                              <Insets top="22.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="addBookButton" minHeight="-Infinity" mnemonicParsing="false" onAction="#handleAddBook" prefHeight="35.0" styleClass="primary-button" text="➕ Add Book">
                           <HBox.margin>
                              <Insets top="22.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
               </padding>
            </HBox>
      
            <!-- Members Table Section -->
            <VBox spacing="10.0" styleClass="table-section" VBox.vgrow="ALWAYS">
               <children>
                  
                  <!-- Table Actions -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="table-actions">
                     <children>
                        <Label styleClass="table-info" text="Select a member to perform actions:" />
                        
                        <Region HBox.hgrow="ALWAYS" />
                        
                        <Button fx:id="refreshButton" minHeight="-Infinity" mnemonicParsing="false" onAction="#handleRefresh" prefHeight="35.0" styleClass="btn-secondary" text="🔄" />
                        <Button fx:id="viewBookButton" disable="true" minHeight="-Infinity" mnemonicParsing="false" onAction="#handleViewBook" prefHeight="35.0" styleClass="btn-secondary" text="👁" />
                        <Button fx:id="editBookButton" disable="true" minHeight="-Infinity" mnemonicParsing="false" onAction="#handleEditBook" prefHeight="35.0" styleClass="btn-secondary" text="📝" />
                        <Button fx:id="deleteBookButton" disable="true" minHeight="-Infinity" mnemonicParsing="false" onAction="#handleDeleteBook" prefHeight="35.0" styleClass="btn-danger" text="❌ " />
                     </children>
                  </HBox>
                  
                  <!-- Books Table -->
                  <TableView fx:id="booksTable" styleClass="data-table" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="idColumn" prefWidth="60.0" text="ID" />
                        <TableColumn fx:id="titleColumn" prefWidth="200.0" text="Title" />
                        <TableColumn fx:id="authorsColumn" prefWidth="150.0" text="Author(s)" />
                        <TableColumn fx:id="categoryColumn" prefWidth="120.0" text="Category" />
                        <TableColumn fx:id="pagesColumn" prefWidth="80.0" text="Pages" />
                        <TableColumn fx:id="yearColumn" prefWidth="80.0" text="Year" />
                        <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  
                  <!-- Pagination Controls -->
                  <HBox alignment="CENTER" spacing="15.0" styleClass="pagination-section">
                     <children>
                        <!-- Navigation Buttons -->
                        <HBox spacing="5.0" styleClass="pagination-nav">
                           <children>
                              <Button fx:id="firstPageBtn" styleClass="pagination-btn" text="⏮" />
                              <Button fx:id="previousPageBtn" styleClass="pagination-btn" text="◀" />
                              <Button fx:id="nextPageBtn" styleClass="pagination-btn" text="▶" />
                              <Button fx:id="lastPageBtn" styleClass="pagination-btn" text="⏭" />
                           </children>
                        </HBox>
                        
                        <!-- Page Information -->
                        <Label fx:id="pageInfoLabel" styleClass="page-info" text="Page 1 of 1 (1-25 of 25 records)" />
                        
                        <Region HBox.hgrow="ALWAYS" />
                        
                        <!-- Go to Page -->
                        <HBox alignment="CENTER_RIGHT" spacing="5.0" styleClass="goto-page">
                           <children>
                              <Label styleClass="pagination-label" text="Go to page:" />
                              <TextField fx:id="goToPageField" prefWidth="60.0" promptText="1" styleClass="goto-page-field" />
                              <Button fx:id="goToPageBtn" styleClass="pagination-btn" text="➡" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </padding>
                  </HBox>
                  
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>

         </children>
      </VBox>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   
   
</ScrollPane>
