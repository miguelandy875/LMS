<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" spacing="20.0" style="-fx-background-color: #f7fafc;">
   <children>
      <!-- Header Section -->
      <HBox alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-background-radius: 12px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.1, 0, 2);">
         <children>
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label style="-fx-font-size: 24px; -fx-text-fill: #2d3748; -fx-font-weight: bold;" text="Loans Management" />
                  <Label style="-fx-font-size: 14px; -fx-text-fill: #718096;" text="Track book loans, manage returns, and handle overdue items." />
               </children>
            </VBox>
            
            <HBox spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" style="-fx-background-color: #38a169; -fx-text-fill: white; -fx-background-radius: 8px; -fx-cursor: hand; -fx-font-weight: bold; -fx-padding: 10px 20px;" text="📋 Process Return">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-background-radius: 8px; -fx-cursor: hand; -fx-font-weight: bold; -fx-padding: 10px 20px;" text="📚 Issue Book">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="25.0" right="25.0" top="25.0" />
         </padding>
      </HBox>
      
      <!-- Statistics Cards -->
      <HBox spacing="15.0">
         <children>
            <!-- Active Loans Card -->
            <VBox alignment="CENTER" style="-fx-background-color: white; -fx-background-radius: 10px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0.1, 0, 2);" HBox.hgrow="ALWAYS">
               <children>
                  <Label style="-fx-font-size: 28px; -fx-text-fill: #3182ce; -fx-font-weight: bold;" text="87" />
                  <Label style="-fx-font-size: 12px; -fx-text-fill: #718096; -fx-font-weight: 500;" text="Active Loans" />
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </VBox>
            
            <!-- Overdue Card -->
            <VBox alignment="CENTER" style="-fx-background-color: white; -fx-background-radius: 10px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0.1, 0, 2);" HBox.hgrow="ALWAYS">
               <children>
                  <Label style="-fx-font-size: 28px; -fx-text-fill: #e53e3e; -fx-font-weight: bold;" text="5" />
                  <Label style="-fx-font-size: 12px; -fx-text-fill: #718096; -fx-font-weight: 500;" text="Overdue" />
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </VBox>
            
            <!-- Due Today Card -->
            <VBox alignment="CENTER" style="-fx-background-color: white; -fx-background-radius: 10px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0.1, 0, 2);" HBox.hgrow="ALWAYS">
               <children>
                  <Label style="-fx-font-size: 28px; -fx-text-fill: #d69e2e; -fx-font-weight: bold;" text="12" />
                  <Label style="-fx-font-size: 12px; -fx-text-fill: #718096; -fx-font-weight: 500;" text="Due Today" />
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </VBox>
            
            <!-- This Month Card -->
            <VBox alignment="CENTER" style="-fx-background-color: white; -fx-background-radius: 10px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0.1, 0, 2);" HBox.hgrow="ALWAYS">
               <children>
                  <Label style="-fx-font-size: 28px; -fx-text-fill: #38a169; -fx-font-weight: bold;" text="245" />
                  <Label style="-fx-font-size: 12px; -fx-text-fill: #718096; -fx-font-weight: 500;" text="This Month" />
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
      
      <!-- Search and Filter Section -->
      <HBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 12px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.1, 0, 2);">
         <children>
            <!-- Search Field -->
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label style="-fx-font-size: 12px; -fx-text-fill: #4a5568; -fx-font-weight: 500;" text="Search Loans" />
                  <TextField promptText="Search by book title, member name, or ID..." style="-fx-background-color: #f7fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 6px; -fx-background-radius: 6px; -fx-padding: 8px 12px;" />
               </children>
            </VBox>
            
            <!-- Status Filter -->
            <VBox spacing="5.0">
               <children>
                  <Label style="-fx-font-size: 12px; -fx-text-fill: #4a5568; -fx-font-weight: 500;" text="Status" />
                  <ComboBox prefWidth="120.0" promptText="All Status" style="-fx-background-color: #f7fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 6px; -fx-background-radius: 6px;" />
               </children>
            </VBox>
            
            <!-- Date Filter -->
            <VBox spacing="5.0">
               <children>
                  <Label style="-fx-font-size: 12px; -fx-text-fill: #4a5568; -fx-font-weight: 500;" text="Date Range" />
                  <DatePicker prefWidth="140.0" promptText="From Date" style="-fx-background-color: #f7fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 6px; -fx-background-radius: 6px;" />
               </children>
            </VBox>
            
            <!-- Search Button -->
            <VBox alignment="BOTTOM_CENTER">
               <children>
                  <Button mnemonicParsing="false" style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-background-radius: 6px; -fx-cursor: hand; -fx-padding: 8px 16px;" text="Search" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="25.0" right="25.0" top="20.0" />
         </padding>
      </HBox>
      
      <!-- Loans Table Section -->
      <VBox style="-fx-background-color: white; -fx-background-radius: 12px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.1, 0, 2);" VBox.vgrow="ALWAYS">
         <children>
            <!-- Table Header -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label style="-fx-font-size: 16px; -fx-text-fill: #2d3748; -fx-font-weight: bold;" text="Active Loans" />
                  <Region HBox.hgrow="ALWAYS" />
                  <HBox spacing="10.0">
                     <children>
                        <Button mnemonicParsing="false" style="-fx-background-color: #e53e3e; -fx-text-fill: white; -fx-background-radius: 6px; -fx-cursor: hand; -fx-font-size: 11px; -fx-padding: 5px 10px;" text="⚠️ View Overdue" />
                        <Label style="-fx-font-size: 12px; -fx-text-fill: #718096;" text="Total Active: 87 loans" />
                     </children>
                  </HBox>
               </children>
            </HBox>
            
            <!-- Table -->
            <TableView style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn prefWidth="60.0" text="Loan ID" />
                  <TableColumn prefWidth="150.0" text="Member Name" />
                  <TableColumn prefWidth="180.0" text="Book Title" />
                  <TableColumn prefWidth="100.0" text="Issue Date" />
                  <TableColumn prefWidth="100.0" text="Due Date" />
                  <TableColumn prefWidth="80.0" text="Days Left" />
                  <TableColumn prefWidth="80.0" text="Status" />
                  <TableColumn prefWidth="120.0" text="Actions" />
               </columns>
            </TableView>
         </children>
         <padding>
            <Insets bottom="20.0" left="25.0" right="25.0" top="20.0" />
         </padding>
      </VBox>
   </children>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</VBox>