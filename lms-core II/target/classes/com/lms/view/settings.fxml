<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<ScrollPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fitToWidth="true" style="-fx-background-color: transparent;">
   <content>
      <VBox spacing="20.0" style="-fx-background-color: #f7fafc;">
         <children>
            <!-- Header Section -->
            <VBox spacing="5.0" style="-fx-background-color: white; -fx-background-radius: 12px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.1, 0, 2);">
               <children>
                  <Label style="-fx-font-size: 24px; -fx-text-fill: #2d3748; -fx-font-weight: bold;" text="System Settings" />
                  <Label style="-fx-font-size: 14px; -fx-text-fill: #718096;" text="Configure system preferences and manage application settings." />
               </children>
               <padding>
                  <Insets bottom="20.0" left="25.0" right="25.0" top="25.0" />
               </padding>
            </VBox>
            
            <!-- General Settings -->
            <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 12px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.1, 0, 2);">
               <children>
                  <Label style="-fx-font-size: 18px; -fx-text-fill: #2d3748; -fx-font-weight: bold;" text="General Settings" />
                  
                  <!-- Library Name -->
                  <VBox spacing="8.0">
                     <children>
                        <Label style="-fx-font-size: 14px; -fx-text-fill: #4a5568; -fx-font-weight: 500;" text="Library Name" />
                        <TextField style="-fx-background-color: #f7fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 6px; -fx-background-radius: 6px; -fx-padding: 8px 12px;" text="Central City Library" />
                     </children>
                  </VBox>
                  
                  <!-- Operating Hours -->
                  <HBox spacing="15.0">
                     <children>
                        <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label style="-fx-font-size: 14px; -fx-text-fill: #4a5568; -fx-font-weight: 500;" text="Opening Time" />
                              <TextField style="-fx-background-color: #f7fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 6px; -fx-background-radius: 6px; -fx-padding: 8px 12px;" text="08:00" />
                           </children>
                        </VBox>
                        <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label style="-fx-font-size: 14px; -fx-text-fill: #4a5568; -fx-font-weight: 500;" text="Closing Time" />
                              <TextField style="-fx-background-color: #f7fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 6px; -fx-background-radius: 6px; -fx-padding: 8px 12px;" text="20:00" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  
                  <!-- Default Loan Period -->
                  <VBox spacing="8.0">
                     <children>
                        <Label style="-fx-font-size: 14px; -fx-text-fill: #4a5568; -fx-font-weight: 500;" text="Default Loan Period (days)" />
                        <TextField style="-fx-background-color: #f7fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 6px; -fx-background-radius: 6px; -fx-padding: 8px 12px;" text="14" />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="20.0" left="25.0" right="25.0" top="20.0" />
               </padding>
            </VBox>
            
            <!-- Loan Management Settings -->
            <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 12px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.1, 0, 2);">
               <children>
                  <Label style="-fx-font-size: 18px; -fx-text-fill: #2d3748; -fx-font-weight: bold;" text="Loan Management" />
                  
                  <HBox spacing="15.0">
                     <children>
                        <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label style="-fx-font-size: 14px; -fx-text-fill: #4a5568; -fx-font-weight: 500;" text="Maximum Books per Member" />
                              <TextField style="-fx-background-color: #f7fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 6px; -fx-background-radius: 6px; -fx-padding: 8px 12px;" text="5" />
                           </children>
                        </VBox>
                        <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label style="-fx-font-size: 14px; -fx-text-fill: #4a5568; -fx-font-weight: 500;" text="Late Fee per Day ($)" />
                              <TextField style="-fx-background-color: #f7fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 6px; -fx-background-radius: 6px; -fx-padding: 8px 12px;" text="1.00" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  
                  <!-- Notification Settings -->
                  <VBox spacing="10.0">
                     <children>
                        <Label style="-fx-font-size: 14px; -fx-text-fill: #4a5568; -fx-font-weight: 500;" text="Notification Preferences" />
                        <CheckBox style="-fx-text-fill: #4a5568;" text="Send reminder 3 days before due date" />
                        <CheckBox style="-fx-text-fill: #4a5568;" text="Send overdue notifications" />
                        <CheckBox selected="true" style="-fx-text-fill: #4a5568;" text="Email notifications enabled" />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="20.0" left="25.0" right="25.0" top="20.0" />
               </padding>
            </VBox>
            
            <!-- Seat Reservation Settings -->
            <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 12px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.1, 0, 2);">
               <children>
                  <Label style="-fx-font-size: 18px; -fx-text-fill: #2d3748; -fx-font-weight: bold;" text="Seat Reservation" />
                  
                  <HBox spacing="15.0">
                     <children>
                        <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label style="-fx-font-size: 14px; -fx-text-fill: #4a5568; -fx-font-weight: 500;" text="Maximum Reservation Hours" />
                              <TextField style="-fx-background-color: #f7fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 6px; -fx-background-radius: 6px; -fx-padding: 8px 12px;" text="4" />
                           </children>
                        </VBox>
                        <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label style="-fx-font-size: 14px; -fx-text-fill: #4a5568; -fx-font-weight: 500;" text="Grace Period (minutes)" />
                              <TextField style="-fx-background-color: #f7fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 6px; -fx-background-radius: 6px; -fx-padding: 8px 12px;" text="15" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  
                  <VBox spacing="10.0">
                     <children>
                        <CheckBox selected="true" style="-fx-text-fill: #4a5568;" text="Allow advance reservations" />
                        <CheckBox style="-fx-text-fill: #4a5568;" text="Auto-release expired reservations" />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="20.0" left="25.0" right="25.0" top="20.0" />
               </padding>
            </VBox>
            
            <!-- Database & Backup Settings -->
            <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 12px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.1, 0, 2);">
               <children>
                  <Label style="-fx-font-size: 18px; -fx-text-fill: #2d3748; -fx-font-weight: bold;" text="Database &amp; Backup" />
                  
                  <VBox spacing="10.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label style="-fx-font-size: 14px; -fx-text-fill: #4a5568; -fx-font-weight: 500;" text="Automatic Backup" />
                                    <Label style="-fx-font-size: 12px; -fx-text-fill: #718096;" text="Last backup: Today at 3:00 AM" />
                                 </children>
                              </VBox>
                              <Button mnemonicParsing="false" style="-fx-background-color: #38a169; -fx-text-fill: white; -fx-background-radius: 6px; -fx-cursor: hand;" text="Backup Now" />
                           </children>
                        </HBox>
                        
                        <CheckBox selected="true" style="-fx-text-fill: #4a5568;" text="Enable daily automatic backups" />
                        <CheckBox style="-fx-text-fill: #4a5568;" text="Email backup notifications" />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="20.0" left="25.0" right="25.0" top="20.0" />
               </padding>
            </VBox>
            
            <!-- System Information -->
            <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 12px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.1, 0, 2);">
               <children>
                  <Label style="-fx-font-size: 18px; -fx-text-fill: #2d3748; -fx-font-weight: bold;" text="System Information" />
                  
                  <GridPane hgap="20.0" vgap="10.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     
                     <VBox spacing="3.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <children>
                           <Label style="-fx-font-size: 12px; -fx-text-fill: #718096;" text="Version" />
                           <Label style="-fx-font-size: 14px; -fx-text-fill: #2d3748; -fx-font-weight: 500;" text="1.0.0" />
                        </children>
                     </VBox>
                     
                     <VBox spacing="3.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <children>
                           <Label style="-fx-font-size: 12px; -fx-text-fill: #718096;" text="Database Status" />
                           <Label style="-fx-font-size: 14px; -fx-text-fill: #38a169; -fx-font-weight: 500;" text="Connected" />
                        </children>
                     </VBox>
                     
                     <VBox spacing="3.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <children>
                           <Label style="-fx-font-size: 12px; -fx-text-fill: #718096;" text="Last Updated" />
                           <Label style="-fx-font-size: 14px; -fx-text-fill: #2d3748; -fx-font-weight: 500;" text="January 2025" />
                        </children>
                     </VBox>
                     
                     <VBox spacing="3.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <children>
                           <Label style="-fx-font-size: 12px; -fx-text-fill: #718096;" text="Active Sessions" />
                           <Label style="-fx-font-size: 14px; -fx-text-fill: #2d3748; -fx-font-weight: 500;" text="1" />
                        </children>
                     </VBox>
                  </GridPane>
               </children>
               <padding>
                  <Insets bottom="20.0" left="25.0" right="25.0" top="20.0" />
               </padding>
            </VBox>
            
            <!-- Action Buttons -->
            <HBox alignment="CENTER" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 12px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.1, 0, 2);">
               <children>
                  <Button mnemonicParsing="false" style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-background-radius: 8px; -fx-cursor: hand; -fx-font-weight: bold; -fx-padding: 12px 24px;" text="Save Changes" />
                  <Button mnemonicParsing="false" style="-fx-background-color: #e2e8f0; -fx-text-fill: #4a5568; -fx-background-radius: 8px; -fx-cursor: hand; -fx-padding: 12px 24px;" text="Reset to Defaults" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="25.0" right="25.0" top="20.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
      </VBox>
   </content>
</ScrollPane>