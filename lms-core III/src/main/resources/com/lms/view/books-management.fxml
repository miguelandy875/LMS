<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" spacing="20.0" style="-fx-background-color: #f7fafc;">
   <children>
      <!-- Header Section -->
      <HBox alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-background-radius: 12px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.1, 0, 2);">
         <children>
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label style="-fx-font-size: 24px; -fx-text-fill: #2d3748; -fx-font-weight: bold;" text="Books Management" />
                  <Label style="-fx-font-size: 14px; -fx-text-fill: #718096;" text="Manage your library's book collection, add new books, and update existing records." />
               </children>
            </VBox>
            
            <Button mnemonicParsing="false" style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-background-radius: 8px; -fx-cursor: hand; -fx-font-weight: bold; -fx-padding: 10px 20px;" text="+ Add New Book">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="20.0" left="25.0" right="25.0" top="25.0" />
         </padding>
      </HBox>
      
      <!-- Search and Filter Section -->
      <HBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 12px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.1, 0, 2);">
         <children>
            <!-- Search Field -->
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label style="-fx-font-size: 12px; -fx-text-fill: #4a5568; -fx-font-weight: 500;" text="Search Books" />
                  <TextField promptText="Search by title, author, or ISBN..." style="-fx-background-color: #f7fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 6px; -fx-background-radius: 6px; -fx-padding: 8px 12px;" />
               </children>
            </VBox>
            
            <!-- Category Filter -->
            <VBox spacing="5.0">
               <children>
                  <Label style="-fx-font-size: 12px; -fx-text-fill: #4a5568; -fx-font-weight: 500;" text="Category" />
                  <ComboBox prefWidth="150.0" promptText="All Categories" style="-fx-background-color: #f7fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 6px; -fx-background-radius: 6px;" />
               </children>
            </VBox>
            
            <!-- Status Filter -->
            <VBox spacing="5.0">
               <children>
                  <Label style="-fx-font-size: 12px; -fx-text-fill: #4a5568; -fx-font-weight: 500;" text="Status" />
                  <ComboBox prefWidth="120.0" promptText="All Status" style="-fx-background-color: #f7fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 6px; -fx-background-radius: 6px;" />
               </children>
            </VBox>
            
            <!-- Search Button -->
            <VBox alignment="BOTTOM_CENTER">
               <children>
                  <Button mnemonicParsing="false" style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-background-radius: 6px; -fx-cursor: hand; -fx-padding: 8px 16px;" text="Search" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="25.0" right="25.0" top="20.0" />
         </padding>
      </HBox>
      
      <!-- Books Table Section -->
      <VBox style="-fx-background-color: white; -fx-background-radius: 12px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.1, 0, 2);" VBox.vgrow="ALWAYS">
         <children>
            <!-- Table Header -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label style="-fx-font-size: 16px; -fx-text-fill: #2d3748; -fx-font-weight: bold;" text="Book Collection" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Label style="-fx-font-size: 12px; -fx-text-fill: #718096;" text="Total: 1,250 books" />
               </children>
            </HBox>
            
            <!-- Table -->
            <TableView style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn prefWidth="60.0" text="ID" />
                  <TableColumn prefWidth="200.0" text="Title" />
                  <TableColumn prefWidth="150.0" text="Author(s)" />
                  <TableColumn prefWidth="100.0" text="Category" />
                  <TableColumn prefWidth="80.0" text="Pages" />
                  <TableColumn prefWidth="80.0" text="Year" />
                  <TableColumn prefWidth="100.0" text="Status" />
                  <TableColumn prefWidth="120.0" text="Actions" />
               </columns>
            </TableView>
         </children>
         <padding>
            <Insets bottom="20.0" left="25.0" right="25.0" top="20.0" />
         </padding>
      </VBox>
   </children>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</VBox>